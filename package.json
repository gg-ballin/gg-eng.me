{
  "name": "gg-eng.me",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "setup": "node scripts/setup.js",
    "clean": "rm -rf node_modules package-lock.json .arch-lock && npm install",
    "clean:full": "npm run clean && npm run setup",
    "dev": "npm run setup && astro dev",
    "prebuild": "node scripts/encode-pdfs.js",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check-env": "node -e \"if(!process.env.RESEND_API_KEY){console.error('❌ RESEND_API_KEY not set');process.exit(1)}else{console.log('✓ Environment configured')}\"",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.5",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/react": "^4.4.2",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.9",
    "dompurify": "^3.2.2",
    "framer-motion": "^12.27.1",
    "isomorphic-dompurify": "^2.15.0",
    "jsdom": "^25.0.1",
    "marked": "^14.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.7.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3"
  }
