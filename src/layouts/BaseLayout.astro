---
import { getTranslations, type Language } from '@/i18n/translations';
import { getCurrentYear } from '@/utils/formatDate';
import { useUserAgent } from 'astro-useragent';
import { APP_VERSION } from '@/lib/version';

interface Props {
  title: string;
  description?: string;
  lang: Language;
  hideSocialLinks?: boolean;
}

const { title = 'Germán Gomez', description = '', lang, hideSocialLinks = false } = Astro.props;
const currentPath = Astro.url.pathname;
const t = getTranslations(lang).nav;
const currentYear = getCurrentYear();

// Language switcher & nav paths (prefixed locales)
const otherLang = lang === 'es' ? 'en' : 'es';
const switcherPath = currentPath.replace(`/${lang}/`, `/${otherLang}/`);

const bioPath = `/${lang}/`;
const experiencePath = `/${lang}/experience`;
const blogPath = `/${lang}/blog`;
const contactPath = `/${lang}/contact`;

// Detect if user is on desktop browser (not mobile) using server-side user agent
const uaString = Astro.request.headers.get('user-agent') ?? '';
let isDesktopBrowser = false;

// In dev mode, always show popup for testing (unless explicitly disabled)
if (import.meta.env.DEV) {
  isDesktopBrowser = true;
} else if (uaString) {
  // In production, use actual user-agent detection
  const userAgent = useUserAgent(uaString);
  isDesktopBrowser = !userAgent.isMobile && !userAgent.isTablet;
} else {
  // Fallback: if no user-agent in production, assume desktop (safer default)
  isDesktopBrowser = true;
}

---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Theme initialization (runs before page render to prevent flash)
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      
      // Nav animation control - play on first visit or refresh
      const hasPlayedAnimation = sessionStorage.getItem('navAnimationPlayed');
      const isRefresh = performance.getEntriesByType('navigation')[0]?.type === 'reload';
      
      if (isRefresh || !hasPlayedAnimation) {
        document.documentElement.classList.add('play-nav-animation');
        sessionStorage.setItem('navAnimationPlayed', 'true');
      }
    </script>
  </head>
  <body class="min-h-screen">
    <nav class="nav-bar">
      <div class="nav-links">
        <a 
          href={bioPath}
          class={`nav-link nav-link-1 hover:opacity-60 transition-opacity ${(currentPath === `/${lang}/` || currentPath === `/${lang}`) ? 'nav-link-active' : ''}`}
        >
          <span class="nav-text">{t.bio}</span>
        </a>
        <a 
          href={experiencePath}
          class={`nav-link nav-link-2 hover:opacity-60 transition-opacity ${currentPath.startsWith(`/${lang}/experience`) ? 'nav-link-active' : ''}`}
        >
          <span class="nav-text">{t.experience}</span>
        </a>
        <a 
          href={blogPath}
          class={`nav-link nav-link-3 hover:opacity-60 transition-opacity ${currentPath.startsWith(`/${lang}/blog`) ? 'nav-link-active' : ''}`}
        >
          <span class="nav-text">{t.blog}</span>
        </a>
        <a 
          href={contactPath}
          class={`nav-link nav-link-4 hover:opacity-60 transition-opacity ${currentPath.startsWith(`/${lang}/contact`) ? 'nav-link-active' : ''}`}
          id="contact-nav-link"
        >
          <span class="nav-text">{t.contact}</span>
        </a>
      </div>
      <div id="nav-controls-glassy" class="nav-controls-glassy">
      <div class="nav-controls">
        <button id="theme-toggle" class="nav-control nav-control-1 theme-toggle-btn" aria-label={t.theme}>
          <span id="theme-icon" class="theme-icon-wrapper">
            <svg id="theme-icon-sun" class="theme-icon theme-icon-sun" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <circle cx="12" cy="12" r="4" fill="currentColor"/>
              <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/>
            </svg>
            <svg id="theme-icon-moon" class="theme-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
            </svg>
          </span>
        </button>
        <a href={switcherPath} class="nav-control nav-control-2 lang-switcher">{otherLang}</a>
        </div>
      </div>
    </nav>
    <!-- Language Change Loading Indicator -->
    <div id="language-loading" class="language-loading" style="display: none;" aria-hidden="true">
      <div class="language-loading-spinner"></div>
    </div>
    <main class="main-content">
      <!-- Social Links -->
      {!hideSocialLinks && (
      <div class="social-links-container">
        <a href="https://www.linkedin.com/in/german-gomez-781040152/" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="https://github.com/gg-ballin" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
      )}
      <slot />
    </main>
    
    <!-- Desktop Detection Popup -->
    <div id="desktop-popup" class={`desktop-popup ${!isDesktopBrowser || currentPath.startsWith(`/${lang}/experience`) ? 'desktop-popup-hidden' : ''}`} role="dialog" aria-labelledby="desktop-popup-message" aria-hidden="true" data-is-desktop={isDesktopBrowser ? 'true' : 'false'}>
      <div class="desktop-popup-content">
        <p id="desktop-popup-message" class="desktop-popup-message">
          {getTranslations(lang).desktopPopup.message}
        </p>
        <div class="desktop-popup-qr-container">
          <img src="/assets/qr/qr-light.png" alt="QR Code" class="qr-code qr-code-light" />
          <img src="/assets/qr/qr-dark.png" alt="QR Code" class="qr-code qr-code-dark" />
        </div>
      </div>
    </div>
    
    <!-- Recruiter Hint Popup -->
    {!currentPath.startsWith(`/${lang}/contact`) && (
      <div id="recruiter-hint-popup" class="recruiter-hint-popup" role="dialog" aria-labelledby="recruiter-hint-message" aria-hidden="true">
        <div class="recruiter-hint-popup-content">
          <p id="recruiter-hint-message" class="recruiter-hint-popup-message">
            <span class="recruiter-hint-desktop">
              {getTranslations(lang).nav.recruiterHint.message}{' '}
              <a href={contactPath} class="recruiter-hint-link">{getTranslations(lang).nav.recruiterHint.linkText}</a>.
            </span>
            <span class="recruiter-hint-mobile">
              {getTranslations(lang).nav.recruiterHint.mobileMessage}{' '}
              <a href={contactPath} class="recruiter-hint-link">{getTranslations(lang).nav.recruiterHint.mobileLinkText}</a>.
            </span>
          </p>
        </div>
        <div class="recruiter-hint-popup-tail"></div>
      </div>
    )}
    
    <footer class={`footer ${currentPath.startsWith(`/${lang}/experience`) ? 'footer-experience' : ''}`}>
      {!hideSocialLinks && (
      <div class="social-links-container-footer">
        <a href="https://www.linkedin.com/in/german-gomez-781040152/" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="https://github.com/gg-ballin" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
      )}
      <p class="footer-copyright">© {currentYear} {getTranslations(lang).footer.copyright}</p>
      <p class="footer-version">
        v{APP_VERSION}
      </p>
      <p class="footer-source">
        <a 
          href="https://github.com/gg-ballin/gg-eng.me" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="footer-link"
        >
          {getTranslations(lang).footer.viewSource} <span aria-hidden="true">→</span>
        </a>
      </p>
    </footer>

    <script>
      const themeToggle = document.getElementById('theme-toggle');
      
      function updateThemeIcons() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const sunEl = document.getElementById('theme-icon-sun');
        const moonEl = document.getElementById('theme-icon-moon');
        if (sunEl && moonEl) {
          sunEl.style.display = currentTheme === 'dark' ? 'block' : 'none';
          moonEl.style.display = currentTheme === 'dark' ? 'none' : 'block';
        }
      }
      
      updateThemeIcons();
      
      themeToggle?.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        themeToggle.style.transform = 'scale(0.9)';
        setTimeout(() => {
          themeToggle.style.transform = 'scale(1)';
        }, 100);
        
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeIcons();
        
        // Dispatch custom event for theme change
        window.dispatchEvent(new CustomEvent('themeChange', { detail: { theme: newTheme } }));
        
        // Retrigger nav-links animation on theme change (nav-controls won't re-animate due to nav-control-animated class)
        retriggerNavAnimations();
      });
      
      // Also listen for theme change events from other sources
      window.addEventListener('themeChange', () => {
        retriggerNavAnimations();
      });
      
      // Function to retrigger nav animations
      function retriggerNavAnimations() {
        const html = document.documentElement;
        html.classList.remove('play-nav-animation');
        
        // Force reflow to reset animations
        void html.offsetWidth;
        
        // Re-add class to retrigger animations
        setTimeout(() => {
          html.classList.add('play-nav-animation');
        }, 10);
      }
      
      // Mark nav-controls as animated after first animation completes (prevent re-animation)
      const navControls = document.querySelectorAll('.nav-control');
      const markControlsAnimated = () => {
        navControls.forEach(control => {
          control.classList.add('nav-control-animated');
        });
      };
      
      // Mark as animated after max animation delay (0.7s + 0.5s = 1.2s)
      setTimeout(() => {
        markControlsAnimated();
      }, 1200);
      
      // Retrigger animations when language is changed (only nav-links, not controls)
      const langSwitcher = document.querySelector('.lang-switcher');
      langSwitcher?.addEventListener('click', () => {
        // Show loading indicator
        const loadingIndicator = document.getElementById('language-loading');
        if (loadingIndicator) {
          loadingIndicator.style.display = 'flex';
        }
        // Store flag that language is being changed
        sessionStorage.setItem('languageChanging', 'true');
      });
      
      // Check if language was just changed on page load
      const languageChanging = sessionStorage.getItem('languageChanging');
      if (languageChanging === 'true') {
        // Hide loading indicator
        const loadingIndicator = document.getElementById('language-loading');
        if (loadingIndicator) {
          setTimeout(() => {
            loadingIndicator.style.display = 'none';
          }, 300);
        }
        // Clear the flag
        sessionStorage.removeItem('languageChanging');
        // Trigger animation after a short delay to ensure page is loaded
        setTimeout(() => {
          retriggerNavAnimations();
        }, 100);
      }
      
      // Also retrigger on browser back/forward navigation
      window.addEventListener('popstate', () => {
        setTimeout(() => {
          retriggerNavAnimations();
        }, 100);
      });
      
      // Desktop detection popup (using server-side detection from astro-useragent)
      function showDesktopPopup() {
        const popup = document.getElementById('desktop-popup');
        
        // Only show if popup exists
        if (!popup) {
          if (import.meta.env.DEV) {
            console.log('[Desktop Popup] Popup not found');
          }
          return;
        }
        
        // Don't show on experience page
        if (window.location.pathname.includes('/experience')) {
          if (import.meta.env.DEV) {
            console.log('[Desktop Popup] On experience page, skipping');
          }
          return;
        }
        
        // Check if popup has data-is-desktop attribute (server-side confirmed desktop)
        const isDesktop = popup.getAttribute('data-is-desktop') === 'true';
        
        if (import.meta.env.DEV) {
          console.log('[Desktop Popup] isDesktop:', isDesktop, 'data-is-desktop:', popup.getAttribute('data-is-desktop'));
        }
        
        if (!isDesktop) {
          if (import.meta.env.DEV) {
            console.log('[Desktop Popup] Not desktop, skipping');
          }
          return;
        }
        
        // Remove hidden class if present
        popup.classList.remove('desktop-popup-hidden');
        
        // In dev mode, allow clearing dismissal status via URL parameter
        if (import.meta.env.DEV && new URLSearchParams(window.location.search).get('clear-popup') === 'true') {
          localStorage.removeItem('desktop-popup-dismissed');
          if (import.meta.env.DEV) {
            console.log('[Desktop Popup] Cleared dismissal status');
          }
        }
        
        // Don't show if already dismissed (only check in production, ignore in dev mode)
        const isDismissed = localStorage.getItem('desktop-popup-dismissed') === 'true';
        if (import.meta.env.DEV) {
          console.log('[Desktop Popup] Dev mode - isDismissed:', isDismissed, '(ignoring dismissal in dev mode)');
        }
        
        // Only respect dismissal in production
        if (!import.meta.env.DEV && isDismissed) {
          return;
        }
        
        // Show popup after a short delay
        setTimeout(() => {
          popup.setAttribute('aria-hidden', 'false');
          popup.classList.add('desktop-popup-visible');
        }, 1500);
      }
      
      // Recruiter hint popup - position near contact nav link on mobile, bottom right on desktop
      function showRecruiterHintPopup() {
        const popup = document.getElementById('recruiter-hint-popup');
        const contactLink = document.getElementById('contact-nav-link');
        
        if (!popup) {
          return;
        }
        
        // Remove hidden class if present
        popup.classList.remove('recruiter-hint-popup-hidden');
        
        // Position popup relative to contact link on mobile only
        function positionPopup() {
          if (!popup) return;
          
          const isMobile = window.innerWidth < 768;
          
          if (isMobile && contactLink) {
            // Mobile: position bottom right, just above the contact nav link
            const contactRect = contactLink.getBoundingClientRect();
            const navBarHeight = 60; // Approximate nav bar height
            const popupOffset = 0.5; // Space above nav link in rem
            
            popup.style.bottom = `${navBarHeight + popupOffset}rem`;
            popup.style.right = '1rem';
            popup.style.left = 'auto';
            popup.style.transform = 'translateY(20px)';
          } else {
            // Desktop: reset to let CSS handle it
            popup.style.bottom = '';
            popup.style.right = '';
            popup.style.left = '';
            popup.style.transform = '';
          }
        }
        
        // Position initially (mobile only)
        positionPopup();
        
        // Reposition on resize (mobile only) - use a single handler
        let resizeTimeout: ReturnType<typeof setTimeout> | null = null;
        const handleResize = () => {
          if (resizeTimeout) {
            clearTimeout(resizeTimeout);
          }
          resizeTimeout = setTimeout(() => {
            positionPopup();
          }, 100);
        };
        window.addEventListener('resize', handleResize, { passive: true });
        
        // Show popup after a short delay
        setTimeout(() => {
          if (!popup) return;
          
          if (import.meta.env.DEV) {
            console.log('[Recruiter Hint Popup] Showing popup now');
          }
          positionPopup(); // Position before showing
          popup.setAttribute('aria-hidden', 'false');
          popup.classList.add('recruiter-hint-popup-visible');
          
          // Reposition after a brief delay to ensure layout is stable
          setTimeout(() => {
            positionPopup();
          }, 100);
        }, 2000);
      }
      
      // QR code shake animation - shake entire popup
      function initQRShake() {
        const popupContent = document.querySelector('.desktop-popup-content');
        if (!popupContent) return;
        
        setInterval(() => {
          popupContent.classList.add('qr-shake');
          setTimeout(() => {
            popupContent.classList.remove('qr-shake');
          }, 500);
        }, 5000);
      }
      
      // Overlap detection for popups
      function checkPopupOverlap(popup: HTMLElement | null, importantContentSelectors: string[]): boolean {
        if (!popup || (!popup.classList.contains('desktop-popup-visible') && !popup.classList.contains('recruiter-hint-popup-visible'))) {
          return false;
        }
        
        const popupRect = popup.getBoundingClientRect();
        const importantElements = document.querySelectorAll(importantContentSelectors.join(','));
        
        for (const element of importantElements) {
          const elementRect = element.getBoundingClientRect();
          
          // Check if popup overlaps with element
          const overlaps = !(
            popupRect.right < elementRect.left ||
            popupRect.left > elementRect.right ||
            popupRect.bottom < elementRect.top ||
            popupRect.top > elementRect.bottom
          );
          
          if (overlaps) {
            return true;
          }
        }
        
        return false;
      }
      
      // Apply overlap opacity to popups
      function updatePopupOpacity() {
        const desktopPopup = document.getElementById('desktop-popup');
        const recruiterPopup = document.getElementById('recruiter-hint-popup');
        
        // Important content areas to check
        const importantSelectors = [
          '.main-content',
          '.skills-column',
          '.experience-column',
          '.experience-layout',
          'aside',
          'section'
        ];
        
        if (desktopPopup) {
          const overlaps = checkPopupOverlap(desktopPopup, importantSelectors);
          desktopPopup.style.opacity = overlaps ? '0.2' : '1';
        }
        
        if (recruiterPopup) {
          const overlaps = checkPopupOverlap(recruiterPopup, importantSelectors);
          recruiterPopup.style.opacity = overlaps ? '0.2' : '1';
        }
      }
      
      // Throttled overlap check
      let overlapCheckTimeout: number | null = null;
      function scheduleOverlapCheck() {
        if (overlapCheckTimeout) {
          cancelAnimationFrame(overlapCheckTimeout);
        }
        overlapCheckTimeout = requestAnimationFrame(updatePopupOpacity);
      }
      
      // Initialize overlap detection
      function initOverlapDetection() {
        // Check on scroll
        window.addEventListener('scroll', scheduleOverlapCheck, { passive: true });
        
        // Check on resize
        window.addEventListener('resize', scheduleOverlapCheck, { passive: true });
        
        // Initial check
        setTimeout(updatePopupOpacity, 2000);
        
        // Check periodically (every 500ms) to catch dynamic content changes
        setInterval(updatePopupOpacity, 500);
      }
      
      // Initialize popup when DOM is ready
      function initPopup() {
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', () => {
            showDesktopPopup();
            showRecruiterHintPopup();
            initQRShake();
            initOverlapDetection();
          });
        } else {
          showDesktopPopup();
          showRecruiterHintPopup();
          initQRShake();
          initOverlapDetection();
        }
      }
      
      // Initialize on page load
      initPopup();
      
      // Re-initialize on route changes (Astro view transitions or navigation)
      // Listen for navigation events to show popup on new pages if not dismissed
      let popupInitialized = false;
      const observer = new MutationObserver(() => {
        const popup = document.getElementById('desktop-popup');
        if (popup && !popupInitialized) {
          const dismissed = localStorage.getItem('desktop-popup-dismissed');
          if (dismissed !== 'true') {
            popupInitialized = true;
            showDesktopPopup();
          }
        }
      });
      
      // Observe body for changes (route navigation)
      observer.observe(document.body, { childList: true, subtree: true });
      
