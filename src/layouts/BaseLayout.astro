---
import { getTranslations, type Language } from '@/i18n/translations';
import { getCurrentYear } from '@/utils/formatDate';

interface Props {
  title: string;
  description?: string;
  lang: Language;
  hideSocialLinks?: boolean;
}

const { title = 'Germán Gomez', description = '', lang, hideSocialLinks = false } = Astro.props;
const currentPath = Astro.url.pathname;
const t = getTranslations(lang).nav;
const currentYear = getCurrentYear();

// Language switcher logic
const otherLang = lang === 'es' ? 'en' : 'es';
const switcherPath = currentPath.replace(`/${lang}/`, `/${otherLang}/`);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Theme initialization (runs before page render to prevent flash)
      const theme = localStorage.getItem('theme') || 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      
      // Nav animation control - play on first visit or refresh
      const hasPlayedAnimation = sessionStorage.getItem('navAnimationPlayed');
      const isRefresh = performance.getEntriesByType('navigation')[0]?.type === 'reload';
      
      if (isRefresh || !hasPlayedAnimation) {
        document.documentElement.classList.add('play-nav-animation');
        sessionStorage.setItem('navAnimationPlayed', 'true');
      }
    </script>
  </head>
  <body class="min-h-screen">
    <nav class="nav-bar">
      <div class="nav-links">
        <a href={`/${lang}/`} class="nav-link nav-link-1 hover:opacity-60 transition-opacity">
          <span class="nav-text">{t.bio}</span>
        </a>
        <a href={`/${lang}/blog`} class="nav-link nav-link-2 hover:opacity-60 transition-opacity">
          <span class="nav-text">{t.blog}</span>
        </a>
        <a href={`/${lang}/contact`} class="nav-link nav-link-3 hover:opacity-60 transition-opacity">
          <span class="nav-text">{t.contact}</span>
        </a>
      </div>
      <div class="nav-controls">
        <button id="theme-toggle" class="nav-control nav-control-1 theme-toggle-btn" aria-label={t.theme}>
          <span id="theme-icon" class="theme-icon-wrapper">
            <svg id="theme-icon-sun" class="theme-icon theme-icon-sun" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <circle cx="12" cy="12" r="4" fill="currentColor"/>
              <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"/>
            </svg>
            <svg id="theme-icon-moon" class="theme-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
            </svg>
          </span>
        </button>
        <a href={switcherPath} class="nav-control nav-control-2 lang-switcher">{otherLang}</a>
      </div>
    </nav>
    <main class="main-content">
      <!-- Social Links -->
      {!hideSocialLinks && (
      <div class="social-links-container">
        <a href="https://www.linkedin.com/in/german-gomez-781040152/" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a href="https://github.com/gg-ballin" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      </div>
      )}
      <slot />
    </main>
    
    <footer class="footer">
      <p class="footer-copyright">© {currentYear} Germán Gómez. {getTranslations(lang).footer.copyright}</p>
    </footer>

    <script>
      const themeToggle = document.getElementById('theme-toggle');
      
      function updateThemeIcons() {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const sunEl = document.getElementById('theme-icon-sun');
        const moonEl = document.getElementById('theme-icon-moon');
        if (sunEl && moonEl) {
          sunEl.style.display = currentTheme === 'dark' ? 'block' : 'none';
          moonEl.style.display = currentTheme === 'dark' ? 'none' : 'block';
        }
      }
      
      updateThemeIcons();
      
      themeToggle?.addEventListener('click', () => {
        const currentTheme = document.documentElement.getAttribute('data-theme');
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        
        themeToggle.style.transform = 'scale(0.9)';
        setTimeout(() => {
          themeToggle.style.transform = 'scale(1)';
        }, 100);
        
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeIcons();
        
        // Dispatch custom event for theme change
        window.dispatchEvent(new CustomEvent('themeChange', { detail: { theme: newTheme } }));
        
        // Retrigger nav animations on theme change
        retriggerNavAnimations();
      });
      
      // Function to retrigger nav animations
      function retriggerNavAnimations() {
        const html = document.documentElement;
        html.classList.remove('play-nav-animation');
        
        // Force reflow to reset animations
        void html.offsetWidth;
        
        // Re-add class to retrigger animations
        setTimeout(() => {
          html.classList.add('play-nav-animation');
        }, 10);
      }
      
      // Listen for theme change events (from other sources if needed)
      window.addEventListener('themeChange', () => {
        retriggerNavAnimations();
      });
      
      // Retrigger animations when language is changed
      const langSwitcher = document.querySelector('.lang-switcher');
      langSwitcher?.addEventListener('click', () => {
        // Small delay to ensure navigation is about to happen
        setTimeout(() => {
          retriggerNavAnimations();
        }, 100);
      });
      
      // Also retrigger on page load if URL changed (language switch)
      window.addEventListener('popstate', () => {
        retriggerNavAnimations();
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
  
  /* Mobile-first: bottom tab bar */
  .nav-bar {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    padding: 0.75rem 0.5rem;
    padding-bottom: max(0.75rem, env(safe-area-inset-bottom));
    background-color: var(--color-nav-bg);
    border-top: 1px solid var(--color-border);
    z-index: 100;
  }
  
  .nav-links {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    gap: 0;
  }
  
  .nav-controls {
    position: fixed;
    top: 1.5rem;
    right: 1rem;
    left: auto;
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    align-items: center;
    z-index: 100;
  }
  
  .nav-emoji {
    display: inline;
    margin-right: 0.25rem;
  }
  
  /* Desktop: left sidebar (original perfect layout) */
  @media (min-width: 768px) {
    .nav-bar {
      left: 0;
      right: auto;
      top: 0;
      bottom: auto;
      width: 4rem;
      height: 100vh;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding: 2rem 0;
      border-top: none;
      border-right: 1px solid var(--color-border);
    }
    
    .nav-links {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      gap: 3rem;
      margin-top: 3rem;
      width: 100%;
    }
    
    .nav-link {
      writing-mode: vertical-rl;
      text-orientation: mixed;
      white-space: nowrap;
      display: block;
    }
    
    .nav-controls {
      position: static;
      flex-direction: column;
      gap: 1.5rem;
      align-items: center;
    }
    
    .nav-control {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .nav-emoji {
      display: none;
    }
  }
  
  /* Mobile-first: main content */
  .main-content {
    flex: 1;
    margin-left: 0;
    padding: 1.5rem;
    padding-bottom: 5rem;
    min-height: 100vh;
    background-color: var(--color-bg);
    position: relative;
  }
  
  @media (min-width: 768px) {
    .main-content {
      margin-left: 4rem;
      padding: 3rem;
      padding-bottom: 3rem;
    }
  }
  
  .nav-link {
    display: inline-flex;
    align-items: center;
    font-size: 1rem;
    letter-spacing: 0.05em;
    text-transform: lowercase;
    font-weight: 700;
    color: var(--color-accent);
    text-decoration: none;
  }
  
  @media (min-width: 768px) {
    .nav-link {
      font-size: 0.875rem;
    }
  }
  
  .nav-control {
    /* Base styles for controls */
  }
  
  .theme-toggle-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text);
    transition: transform 0.2s ease, opacity 0.2s ease;
    cursor: pointer;
    background: none;
    border: none;
    padding: 0.25rem;
  }
  
  .theme-toggle-btn:hover {
    transform: scale(1.1);
    opacity: 0.8;
  }
  
  .theme-toggle-btn:active {
    transform: scale(0.95);
  }
  
  .theme-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .theme-icon {
    transition: transform 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
  
  #theme-icon-sun,
  #theme-icon-moon {
    display: none;
  }
  
  [data-theme="dark"] #theme-icon-sun {
    display: block;
  }
  
  [data-theme="light"] #theme-icon-moon {
    display: block;
  }
  
  .lang-switcher {
    color: var(--color-accent);
    position: relative;
    animation: pulse-glow 2s ease-in-out infinite;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }
  
  .lang-switcher::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 0.375rem;
    border: 1px solid var(--color-accent);
    opacity: 0.5;
    animation: pulse-ring 2s ease-in-out infinite;
  }
  
  .lang-switcher:hover {
    opacity: 1 !important;
    transform: scale(1.1);
  }
  
  @keyframes pulse-glow {
    0%, 100% {
      opacity: 0.8;
      text-shadow: 0 0 5px var(--color-accent);
    }
    50% {
      opacity: 1;
      text-shadow: 0 0 15px var(--color-accent), 0 0 25px var(--color-accent);
    }
  }
  
  @keyframes pulse-ring {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.05);
    }
  }
  
  .social-links-container {
    position: absolute;
    top: 1.5rem;
    left: 1rem;
    display: flex;
    gap: 1rem;
    z-index: 50;
  }
  
  .social-link {
    color: var(--color-text);
    transition: color 0.3s ease, transform 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.6;
  }
  
  .social-link:hover {
    color: var(--color-accent);
    transform: scale(1.15);
    opacity: 1;
  }
  
  .social-link:active {
    transform: scale(0.95);
  }
  
  .social-link svg {
    transition: filter 0.3s ease;
  }
  
  .social-link:hover svg {
    filter: drop-shadow(0 0 8px var(--color-accent));
  }
  
  /* Desktop-only nav animations (sidebar as it was) */
  @media (min-width: 768px) {
    .play-nav-animation .nav-link {
      opacity: 0;
      animation: slideFromOutside 0.6s ease-out forwards;
    }
    
    .play-nav-animation .nav-link-1 {
      animation-delay: 0.1s;
    }
    
    .play-nav-animation .nav-link-2 {
      animation-delay: 0.25s;
    }
    
    .play-nav-animation .nav-link-3 {
      animation-delay: 0.4s;
    }
    
    .play-nav-animation .nav-control {
      opacity: 0;
      animation: scaleFromInside 0.5s ease-out forwards;
    }
    
    .play-nav-animation .nav-control-1 {
      animation-delay: 0.55s;
    }
    
    .play-nav-animation .nav-control-2 {
      animation-delay: 0.7s;
    }
  }
  
  @keyframes slideFromOutside {
    from {
      opacity: 0;
      transform: translateX(-100%);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @keyframes scaleFromInside {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
  .footer {
    padding: 2rem 1rem;
    text-align: center;
    border-top: 1px solid var(--color-border);
    margin-top: 4rem;
  }
  
  .footer-copyright {
    font-size: 0.875rem;
    color: var(--color-text);
    opacity: 0.6;
    margin: 0;
  }
</style>
