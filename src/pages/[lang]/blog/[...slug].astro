---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  
  return blogEntries.map(entry => ({
    params: { 
      lang: entry.data.language,
      slug: entry.slug.replace(`${entry.data.language}/`, '')
    },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const lang = entry.data.language;

const formatDate = (date: Date, locale: string) => {
  return new Intl.DateTimeFormat(locale, {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(date);
};
---

<BaseLayout 
  title={entry.data.title} 
  description={entry.data.description}
  lang={lang}
>
  <article class="max-w-4xl">
    <header class="article-header">
      <h1 class="article-title">{entry.data.title}</h1>
      <time class="article-date" datetime={entry.data.pubDate.toISOString()}>
        {formatDate(entry.data.pubDate, lang)}
      </time>
      <div class="article-description">
        {entry.data.description}
      </div>
    </header>
    <div class="prose">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .article-header {
    border: 3px solid var(--color-text);
    padding: 2rem;
    margin-bottom: 3rem;
    position: relative;
  }

  .article-header::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 8px;
    right: -8px;
    bottom: -8px;
    border: 3px solid var(--color-text);
    z-index: -1;
  }

  .article-title {
    font-family: var(--font-family-serif);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .article-title {
      font-size: 3.5rem;
    }
  }

  .article-date {
    display: inline-block;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    padding: 0.5rem 1rem;
    background-color: var(--color-text);
    color: var(--color-bg);
    margin-bottom: 1rem;
  }

  .article-description {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-top: 1rem;
    opacity: 0.8;
  }
</style>

<style is:global>
  .prose {
    line-height: 1.75;
  }
  
  .prose h2 {
    font-family: var(--font-family-serif);
    font-size: 2rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-text);
  }
  
  .prose h3 {
    font-family: var(--font-family-serif);
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose p {
    margin-bottom: 1.5rem;
    font-size: 1.0625rem;
  }
  
  .prose a {
    color: var(--color-text);
    text-decoration: none;
    border-bottom: 2px solid var(--color-text);
    transition: all 0.2s;
  }
  
  .prose a:hover {
    background-color: var(--color-text);
    color: var(--color-bg);
  }
  
  .prose ul, .prose ol {
    margin-left: 2rem;
    margin-bottom: 1.5rem;
  }
  
  .prose li {
    margin-bottom: 0.75rem;
  }

  .prose li::marker {
    font-weight: 700;
  }
  
  .prose code {
    font-family: 'Courier New', monospace;
    background-color: transparent;
    border: 1px solid var(--color-text);
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
  }
  
  .prose pre {
    background-color: var(--color-text);
    color: var(--color-bg);
    padding: 1.5rem;
    border: 2px solid var(--color-text);
    overflow-x: auto;
    margin-bottom: 1.5rem;
    font-family: 'Courier New', monospace;
  }
  
  .prose pre code {
    background: transparent;
    border: none;
    padding: 0;
  }

  .prose hr {
    border: none;
    border-top: 2px solid var(--color-text);
    margin: 3rem 0;
  }

  .prose blockquote {
    border-left: 4px solid var(--color-text);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
  }
</style>
