---
import { getTranslations, type Language } from '../i18n/translations';
import Reveal from './Reveal';
import YearProgress from './YearProgress';
import TechIconLink from './TechIconLink.astro';
import { marked } from 'marked';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang).bio;

// Parse markdown - content is from trusted translations, no sanitization needed
const descriptionHtml = marked.parse(t.description, { breaks: true }) as string;

---

<div class="relative max-w-4xl">
  <div class="bio-dots" aria-hidden="true"></div>
  
  <div class="bio-content-wrapper">
    <div class="relative z-10 mt-12 bio-main-content">
      <Reveal client:load>
        <h2 class="bio-title font-bold mb-8 leading-tight" style="font-family: var(--font-family-sans);">{t.name}<span class="bio-accent">.</span>
        </h2>
      </Reveal>
      
      <div style="display: flex; flex-direction: column;">
        <Reveal client:load delay={0.2}>
          <p class="text-2xl md:text-3xl mb-12" set:html={(() => {
            const words = t.role.split(' ');
            const parts: string[] = [];
            words.forEach((word, index) => {
              if (index > 0) parts.push(' ');
              const isMobile = word === 'Mobile';
              parts.push(`<span class="${isMobile ? 'bio-accent' : 'opacity-80'}">${word}</span>`);
            });
            return parts.join('');
          })()} />
        </Reveal>
        
        <Reveal client:load delay={0.3}>
          <p class="text-base md:text-lg opacity-70 mb-8 md:mb-12">
            {t.location} ðŸ‡¦ðŸ‡·
          </p>
        </Reveal>
      </div>
       
      <div class="description-reveal">
        <div class="text-lg md:text-xl max-w-2xl mb-12 leading-relaxed opacity-90" set:html={descriptionHtml}></div>
      
        <div class="tech-explanation">
          <p class="text-lg md:text-xl max-w-2xl mb-6 leading-relaxed opacity-90">
            {t.techExplanation.intro}
          </p>
          <div class="tech-icons mb-6">
            <TechIconLink 
              href="https://astro.build"
              title={t.techExplanation.technologies.astro}
              iconLight="/assets/astro_logo_dark.svg"
              iconDark="/assets/astro_logo_light.svg"
              width={65}
            />
            <TechIconLink 
              href="https://www.framer.com/motion/"
              title={t.techExplanation.technologies.framerMotion}
              iconLight="/assets/motion_logo_light.svg"
              iconDark="/assets/motion_logo_dark.svg"
              text={t.techExplanation.technologies.framerMotion}
            />
            <TechIconLink 
              href="https://tailwindcss.com"
              title={t.techExplanation.technologies.tailwind}
              iconLight="/assets/tailwindcss_logo_light.svg"
              iconDark="/assets/tailwindcss_logo_dark.svg"
              width={95}
            />
          </div>
          <p class="text-lg md:text-xl max-w-2xl mb-6 leading-relaxed opacity-90">
            {t.techExplanation.whyWebpage}
          </p>
          <p class="text-lg md:text-xl max-w-2xl mb-12 leading-relaxed opacity-90">
            {t.techExplanation.mobileVsWeb}
          </p>
        </div>
      </div>
    </div>
    
    <div class="year-progress-wrapper year-progress-sticky">
      <YearProgress client:load lang={lang} />
    </div>
  </div>
</div>

<style>
  .bio-accent {
    color: var(--color-accent) !important;
  }
  
  .bio-cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    background-color: var(--color-accent);
    color: #ffffff;
    font-weight: 600;
    font-size: 1.125rem;
    text-decoration: none;
    border-radius: 0.375rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  
  .bio-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(99, 102, 241, 0.3);
  }
  
  [data-theme="dark"] .bio-cta:hover {
    box-shadow: 0 4px 20px rgba(0, 255, 136, 0.4);
  }
  
  .bio-dots {
    position: absolute;
    top: -2rem;
    right: -4rem;
    width: 400px;
    height: 600px;
    background-image: radial-gradient(circle, rgba(0, 0, 0, 0.05) 2px, transparent 2px);
    background-size: 32px 32px;
    pointer-events: none;
    opacity: 0.4;
    transition: opacity 0.3s ease;
  }
  
  [data-theme="dark"] .bio-dots {
    background-image: radial-gradient(circle, rgba(255, 255, 255, 0.1) 2px, transparent 2px);
    opacity: 0.5;
  }
  
  .year-progress-wrapper {
    margin-top: 40vh;
    opacity: 0;
    transform: translateY(10px);
    animation: yearProgressReveal 0.8s ease-out 1.2s forwards;
  }
  
  .tech-explanation {
    margin-top: 2rem;
  }
  
  .tech-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    align-items: center;
  }
  
  .bio-content-wrapper {
    position: relative;
  }
  
  .year-progress-wrapper {
    /* margin-top: 90vh; */
    opacity: 0;
    transform: translateY(10px);
    animation: yearProgressReveal 0.8s ease-out 1.2s forwards;
  }
  
  /* Responsive YearProgress layout */
  @media (min-width: 1024px) {
    .bio-content-wrapper {
      display: grid;
      grid-template-columns: 1fr 400px
      gap: 2rem;
      align-items: start;
    }
    
    .bio-main-content {
      display: flex;
      flex-direction: column;
    }
    
    .year-progress-sticky {
      position: sticky;
      top: 2rem;
      margin-top: 2rem;
      width: 100%;
      max-width: 400px;
      height: fit-content;
      align-self: self-start;
    }
  }
  
  @media (max-width: 1280px) {
    .year-progress-wrapper {
      margin-top: 2rem;
    }
  }
  
  .description-reveal {
    position: relative;
    overflow: hidden;
    width: fit-content;
    animation: descriptionReveal 0.8s ease-out 0.4s both;
  }
  
  .bio-title {
    font-size: 2.5rem;
  }
  
  @media (min-width: 768px) {
    .bio-title {
      font-size: 3.75rem;
    }
  }
  
  .description-reveal p {
    margin-bottom: 1.5rem;
  }
  
  .description-reveal p:last-child {
    margin-bottom: 0;
  }
  
  @media (max-width: 767px) {
    .description-reveal p {
      margin-bottom: 1.5rem;
    }
    
    .description-reveal p:last-child {
      margin-bottom: 0;
    }
  }
  
  @keyframes descriptionReveal {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<style is:global>
  /* Bio accent color for Mobile word */
  .bio-accent {
    color: var(--color-accent) !important;
  }
  
  /* Inline code styling for markdown - Slack-like with accent color */
  p code,
  code {
    background-color: var(--color-accent);
    color: #ffffff;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', 'Droid Sans Mono', 'Source Code Pro', monospace;
    font-size: 0.9em;
    font-weight: 500;
    display: inline-block;
    line-height: 1.4;
  }
  
  [data-theme="dark"] p code,
  [data-theme="dark"] code {
    background-color: var(--color-accent);
    color: #000000;
    font-weight: 600;
  }
  
  @keyframes yearProgressReveal {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .year-progress {
    padding: 1.125rem 1.5rem;
    border: 3px solid var(--color-text);
    background-color: var(--color-bg);
    border-radius: 0.75rem;
    position: relative;
    overflow: hidden;
  }
  
  .year-progress-content {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }
  
  .year-progress-stats {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    min-width: 90px;
    padding-top: 0;
    flex-shrink: 0;
  }
  
  .year-number {
    font-family: var(--font-family-sans);
    font-size: 1.3125rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1.2;
  }
  
  .year-day-info {
    font-family: var(--font-family-sans);
    font-size: 0.7rem;
    color: var(--color-text);
    opacity: 0.9;
  }
  
  .year-days-left {
    font-family: var(--font-family-sans);
    font-size: 0.7rem;
    color: var(--color-text);
    opacity: 0.7;
  }
  
  .year-percentage {
    font-family: var(--font-family-sans);
    font-size: 0.7rem;
    color: var(--color-text);
    opacity: 0.7;
  }
  
  .year-progress-grid {
    display: grid;
    grid-template-columns: repeat(20, 1fr);
    gap: 0.375rem;
    flex: 1;
    min-width: 0;
  }
  
  @media (max-width: 768px) {
    .year-progress {
      padding: 0.875rem 1rem;
    }
    
    .year-progress-content {
      flex-direction: row;
      align-items: flex-start;
      gap: 0.75rem;
    }
    
    .year-progress-stats {
      flex-shrink: 0;
      min-width: 70px;
      gap: 0.25rem;
    }
    
    .year-number {
      font-size: 1rem;
    }
    
    .year-day-info,
    .year-days-left,
    .year-percentage {
      font-size: 0.625rem;
    }
    
    .year-progress-grid {
      flex: 1;
      min-width: 0;
      gap: 0.25rem;
      max-width: none;
    }
    
    .year-dot {
      min-width: 3px;
      min-height: 3px;
    }
  }
  
  .year-dot {
    width: 100%;
    aspect-ratio: 1;
    border-radius: 50%;
    background-color: var(--color-text);
    opacity: 0.2;
    transition: all 0.2s ease;
    animation: dotReveal 0.3s ease-out backwards;
    min-width: 4px;
    min-height: 4px;
  }
  
  .year-dot-passed {
    background-color: var(--color-accent);
    opacity: 1;
  }
  
  @keyframes dotReveal {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 0.2;
      transform: scale(1);
    }
  }
  
  .year-dot-passed {
    animation: dotRevealPassed 0.4s ease-out backwards;
  }
  
  @keyframes dotRevealPassed {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
      background-color: var(--color-accent);
    }
  }
  
  /* Current-day dot: glow/pulse aligned with language switcher (2s ease-in-out infinite) */
  .year-dot-current {
    position: relative;
    animation: dotRevealPassed 0.4s ease-out backwards, pulse-glow-dot 2s ease-in-out infinite;
  }
  
  .year-dot-current::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 50%;
    border: 1px solid var(--color-accent);
    opacity: 0.5;
    animation: pulse-ring 2s ease-in-out infinite;
    pointer-events: none;
  }
  
  @keyframes pulse-glow-dot {
    0%, 100% {
      opacity: 0.9;
      box-shadow: 0 0 4px var(--color-accent), 0 0 6px var(--color-accent);
    }
    50% {
      opacity: 1;
      box-shadow: 0 0 10px var(--color-accent), 0 0 16px var(--color-accent), 0 0 24px var(--color-accent);
    }
  }
</style>
