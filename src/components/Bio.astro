---
import { getTranslations, type Language } from '../i18n/translations';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang).bio;
---

<div class="max-w-3xl">
  <h1 class="text-5xl md:text-6xl font-serif font-bold mb-4">{t.name}</h1>
  <p class="text-xl md:text-2xl mb-2">{t.role}</p>
  <p class="text-lg opacity-70 mb-8">{t.location}</p>
  <p class="text-lg opacity-80 max-w-2xl" style="line-height: 1.75;">
    {t.description}
  </p>
</div>
