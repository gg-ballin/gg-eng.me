---
interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;

const content = {
  es: {
    name: 'Germán Gomez',
    role: 'Senior Mobile Engineer',
    location: 'Buenos Aires, Argentina',
    bio: 'Ingeniero especializado en desarrollo móvil con pasión por crear experiencias de usuario excepcionales. Enfocado en arquitecturas escalables y código limpio que impulsan productos innovadores.',
  },
  en: {
    name: 'Germán Gomez',
    role: 'Senior Mobile Engineer',
    location: 'Buenos Aires, Argentina',
    bio: 'Engineer specialized in mobile development with a passion for creating exceptional user experiences. Focused on scalable architectures and clean code that drive innovative products.',
  }
};

const c = content[lang];
---

<div class="max-w-3xl">
  <h1 class="text-5xl md:text-6xl font-serif font-bold mb-4">{c.name}</h1>
  <p class="text-xl md:text-2xl mb-2">{c.role}</p>
  <p class="text-lg opacity-70 mb-8">{c.location}</p>
  <p class="text-lg opacity-80 max-w-2xl" style="line-height: 1.75;">
    {c.bio}
  </p>
</div>
