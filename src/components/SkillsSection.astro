---
import * as Icon from '@astropub/icons'

interface Props {
  title: string;
  skills: string[];
  icon?: string;
}

const { title, skills, icon } = Astro.props;
---

<section class="skills-section">
  <h3 class="skills-title">
    {icon && (
      <span class="skills-icon skills-icon-shake">
        <Icon.DoubleArrowUp width={16} height={16} />
      </span>
    )}
    {title}
  </h3>
  <div class="skills-grid">
    {skills.map((skill) => (
      <span class="skill-badge">{skill}</span>
    ))}
  </div>
</section>

<style>
  .skills-section {
    margin-bottom: 3rem;
  }
  
  .skills-section:last-child {
    margin-bottom: 0;
  }
  
  .skills-title {
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .skills-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    color: var(--color-text);
  }
  
  .skills-icon-shake {
    animation: iconShake 2.5s ease-in-out infinite;
  }
  
  @keyframes iconShake {
    0%, 100% {
      transform: translateY(0);
    }
    25% {
      transform: translateY(-2px);
    }
    75% {
      transform: translateY(2px);
    }
  }
  
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }
  
  .skill-badge {
    font-family: var(--font-family-sans);
    font-size: 0.875rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border: 2px solid var(--color-text);
    background-color: var(--color-bg);
    color: var(--color-text);
    transition: all 0.2s ease;
  }
  
  .skill-badge:hover {
    background-color: var(--color-accent);
    color: var(--color-bg);
    transform: translate(2px, -2px);
    box-shadow: -2px 2px 0 var(--color-text);
  }
  
  @media (max-width: 768px) {
    .skills-section {
      margin-bottom: 2rem;
    }
    
    .skills-grid {
      gap: 0.5rem;
    }
    
    .skill-badge {
      font-size: 0.8125rem;
      padding: 0.375rem 0.75rem;
    }
  }
</style>
